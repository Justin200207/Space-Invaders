import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.*;
import javax.imageio.*;

public class Alien{
  int x_pos;
  int y_pos;
  BufferedImage sprite1, sprite2, sprite;
  
  public Alien(int x, int y){
    x_pos = x;
    y_pos = y;

    try{
      sprite1 = ImageIO.read(new File("sprites/aliens/alien1-1"));
      sprite2 = ImageIO.read(new File("sprites/aliens/alien1-2"));
    }catch(IOException e){}
    sprite = sprite1;
  }
  
  public int getX_pos(){
    return x_pos;
  }
  
  public int getY_pos(){
    return y_pos;
  }
  
  public Image getImage(){
    return sprite;
  }
  
  public void moveAlien(int width, int dir){ 
    if(dir>0){
      x_pos+=35;
    }else if(dir<0){
      x_pos-=35;
    }
  }
  
  public boolean checkLoss(){
    if(y_pos+65>=605){
      return true;
    }else{
      return false;
    }
  }
  
  public void moveAlienDown(){
    y_pos+=65;
  }
  
  public boolean checkWall(int width){
    if(x_pos+70>=width){
      return true;
    }else if(x_pos-35<=0){
      return true;
    }else{
      return false;
    }
  }
  
  public Rectangle getBounds(){
    return new Rectangle(x_pos,y_pos,sprite.getWidth(), sprite.getHeight());
  }
  public int getWidth(){
    return sprite.getWidth();
  }
}